<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FaceMaskVideoDetector.App">
    <Application.Resources>
        <ResourceDictionary>

            <Color x:Key="mainColor">#2288aa</Color>
            <Color x:Key="subColor">#ffeeff</Color>
            
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource mainColor}"/>
                <Setter Property="TextColor" Value="{StaticResource subColor}"/>
                <Setter Property="CornerRadius" Value="15"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>